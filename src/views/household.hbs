<header>
    {{> header}}
</header>
<main>
    <section class="side-menu household">
        {{> sidebar}}
    </section>
    <section class="main-content">
        <div class="container">
            {{> form}}
            <div id="tasks" class="tasks">
                {{#each tasks}}
                    {{#if (isCategoryHousehold this.category)}}
                        {{#unless this.done}}
                            {{> task this}}
                        {{/unless}}
                    {{/if}}
                {{/each}}
            </div>
            <div id="finishedTasks" class="tasks finished-tasks">
            <h1>Things you've done!</h1>
                {{#each tasks}}
                    {{#if (isCategoryHousehold this.category)}}
                        {{#if this.done}}
                            {{> task-finished this}}
                        {{/if}}
                    {{/if}}
                {{/each}}
            </div>
        </div>
    </section>
</main>
