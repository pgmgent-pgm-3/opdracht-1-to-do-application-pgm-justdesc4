<article class="task">
  {{#doneButton @root.categoryId this.id}}{{/doneButton}}
  <div class="task__text">
    <p>
      {{task}}
    </p>
  </div>
  {{#deleteButton @root.categoryId this.id}}{{/deleteButton}}
  <a href="/tasks/edit/{{this.id}}" class="edit">
    <img src="/images/edit-icon.svg" alt="Edit" />
  </a>
</article>