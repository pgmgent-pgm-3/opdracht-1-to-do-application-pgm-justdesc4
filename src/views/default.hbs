<header>
    {{> header}}
</header>
{{#if message}}
    <div class="message" id="message">
        <div class="container">
            <div class="close" id="close">
                <svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 30 30"><path fill="currentColor" d="M7 4a.995.995 0 0 0-.707.293l-2 2a.999.999 0 0 0 0 1.414L11.586 15l-7.293 7.293a.999.999 0 0 0 0 1.414l2 2a.999.999 0 0 0 1.414 0L15 18.414l7.293 7.293a.999.999 0 0 0 1.414 0l2-2a.999.999 0 0 0 0-1.414L18.414 15l7.293-7.293a.999.999 0 0 0 0-1.414l-2-2a.999.999 0 0 0-1.414 0L15 11.586 7.707 4.293A.996.996 0 0 0 7 4z"/></svg>
            </div>
            <p>{{message}}</p>
        </div>
    </div>
    <div class="overlay-bg" id="overlay-bg"></div>
{{/if}}
<main class="default">
    <section class="side-menu default">
        {{> sidebar}}
    </section>
    <section class="main-content">
        <div class="container">
            {{> form}}
            <div id="tasks" class="tasks">
                {{#each tasks}}
                        {{#unless this.done}}
                            {{> task this}}
                        {{/unless}}
                {{/each}}
            </div>
            <div id="finishedTasks" class="tasks finished-tasks">
            <h1>Things you've done!</h1>
                {{#each tasks}}
                        {{#if this.done}}
                            {{> task-finished this}}
                        {{/if}}
                {{/each}}
            </div>
        </div>
    </section>
</main>