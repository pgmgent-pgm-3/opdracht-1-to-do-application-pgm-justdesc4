<div>
  <h1>We've got things to do!</h1>
  <form action="/tasks" method="POST" id="form">
    <div class="form__input">
      <input
        type="text"
        name="task"
        placeholder="what is your task?"
        required
      />
      <button>
        <img src="./images/plus-icon.svg" alt="Plus icon" />
      </button>
    </div>
    <p>
      Choose a category:
    </p>
    <select name="category_id" required>
      {{#each categories}}
        <option value="{{this.id}}">{{this.category}}</option>
      {{/each}}
    </select>
  </form>
</div>